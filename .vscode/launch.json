{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "后端服务（Delve 调试）",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/service/main.go",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "GO111MODULE": "on"
      },
      "buildFlags": ["-gcflags=all=-N -l"]
    },
    {
      "name": "Fyne 客户端（Delve 调试）",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/client/main.go",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "CGO_ENABLED": "1",
        "LANG": "zh_CN.UTF-8",
        "LC_ALL": "zh_CN.UTF-8",
        "LANGUAGE": "zh_CN:zh"
      },
      "buildFlags": ["-gcflags=all=-N -l"]
    }
  ],
  "compounds": [
    {
      "name": "客户端 + 服务（复合调试）",
      "configurations": [
        "后端服务（Delve 调试）",
        "Fyne 客户端（Delve 调试）"
      ],
      "stopAll": true
    }
  ]
}